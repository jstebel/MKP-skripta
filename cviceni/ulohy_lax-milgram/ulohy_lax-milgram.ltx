{\textbf{LAX-MILGRAMOVA VĚTA}}

\vspace{1cm}
{\Large naposledy upraveno: \today}
\end{center}

\pagebreak

Pro zadané slabé formulace 
\begin{equation*}
    a(u,v) = l(v) \qquad \forall v\in V,
\end{equation*}
ověřte, zdali existuje jednoznačné slabé řešení $u\in U$ podle Laxovy-Milgramovy věty.

Dílčí úkoly:
\begin{enumerate}[label=\alph*)]
\item Ukažte, že forma $a$ je skutečně bilineární a dále zdali může být skalárním součinem na prostoru V.
\item Ukažte, že forma $a$ je eliptická a omezená, doplňte nutné předpoklady o vstupních datech.\\
    \emph{U každého kroku symbolicky označte, jakou nerovnost jste použili (např. \texttt{C-S} Cauchyho-Schwarzova nerovnost).}
\item Ukažte, že forma $l$ je omezená.
\item Formulujte Laxovu-Milgramovu větu o existenci řešení daného problému.
\item Bonus: Najděte odpovídající silnou formulaci problému, tj. parciální dif. rovnici a příslušné okrajové podmínky.
\end{enumerate}

\vspace{1cm}

\begin{enumerate}
    \item
    \begin{align*}
        a(u,v) &= \int_a^b u(x) v(x) + K u'(x)v'(x)\, \d x, \\
        l(v) &= \int_a^b f(x)v(x)\, \d x - q_A v(a) - q_B v(b)
    \end{align*}
    kde $u,v\in V = H^1([a,b])$.
    \item
    \begin{align*}
        a(u,v) &= \int_a^b \lambda(x) u'(x)v'(x)\, \d x, \\
        l(v) &= \int_a^b f(x)v(x)\, \d x - q_B v(b)
    \end{align*}
    kde $u,v\in V = H^1([a,b])$.
    \item
    \begin{align*}
        a(u,v) &= \int_a^b \lambda(x) u'(x)v'(x)\, \d x + \sigma u(a)v(a), \\
        l(v) &= \int_a^b \Big(f(x)v(x) - \lambda(x) u'_D(x) v'(x)\Big)\, \d x + \sigma u_R v(a),
    \end{align*}
    kde $v\in V=\{w\in H^1([a,b]), w(b)=0\}$, $u,u_D\in H^1([a,b])$.
    \item
    \begin{align*}
        a(u,v) &= \int_1^2 x u'(x)v'(x)\, \d x, \\
        l(v) &= \int_1^2 f(x)v(x)\, \d x,
    \end{align*}
    kde $u,v\in V=\{w\in H^1([1,2]), w(1)=0\}$.
    \item
    \begin{align*}
        a(u,v) &= \int_a^b \Big( Ku'(x)v'(x) + g(x)u(x)v(x) \Big)\, \d x, \\
        l(v) &= \int_a^b g(x)u_f(x)v(x)\, \d x - q_B v(b),
    \end{align*}
    kde $u,v\in V=\{w\in H^1([a,b]), w(a)=0\}$.
\end{enumerate}

