U následujících úloh:
\begin{enumerate}
  \item Aplikujte Galerkinovu metodu a napište slabou formulaci daného problému.
  \item Definujte prostor testovacích funkcí $\mathcal{V}$ a prostor řešení $\mathcal{U}$.
  \item Zvolte vhodné prostory konečných prvků, tedy diskrétní podprostory
        $\mathcal{V}_h\subset\mathcal{V}$ a $\mathcal{U}_h     \subset\mathcal{U}$.
  \item Proveďte zvolenou diskretizaci a sestavte systém lineárních algebraických rovnic pro zvolené stupně volnosti
        ($\vc A \vc x = \vc b$).
  \item Pro systém $\vc A \vc x = \vc b$ definujte buď 
    \begin{itemize}
      \item globálně prvky $A_{ij}$ a $b_i$.
      \item nebo lokální matici $\vc L$ a lokální vektor pravé strany $\vc {lb}$.
    \end{itemize}
  \item Ukažte, že existuje jednoznačné řešení slabé formulace $u(x)$.
\end{enumerate}

\hrulefill

\begin{enumerate}
  \item
    \begin{eqnarray*}
      -u''(x) &=& -1 \qquad \textrm{in } \Omega=[0,1] \\
      u(0) &=& 0 \\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -u''(x) &=& -1 \qquad \textrm{in } \Omega=[0,1] \\
      u(0) &=& 0 \\
      -u'(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -Ku''(x) &=& -1 \qquad \textrm{in } \Omega=[0,1],\; K=const. \\
      u(0) &=& 0 \\
      -Ku'(1) &=& q_N
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -Ku''(x) &=& 1-x \qquad \textrm{in } \Omega=[a,b],\; K=const. \\
      -Ku'(0) &=& \sigma(u(0) - u_D) \qquad \sigma=const.,\; u_D=const.\\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -(K(x)u'(x))' &=& f(x) \qquad \textrm{in } \Omega=[a,b],\; K(x)>0 \,\forall x\in\Omega \\
      -Ku'(0) &=& -q_N\\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -Ku''(x) &=& \sigma(u - u_f) \qquad \textrm{in } \Omega=[a,b],\; K=const.,\; u_f=const.\\
      -Ku'(0) &=& -q_N\\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      g(x)u'(x)-Ku''(x) &=& f(x) \qquad \textrm{in } \Omega=[a,b],\; K=const.,\; u_f=const.\\
      -Ku'(0) &=& -q_N\\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -u''(x) &=& 1 \qquad \textrm{in } \Omega=[0,1]\\
      u(0) &=& 2\\
      u(1) &=& 3
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -u''(x) &=& 2(1-u(x)) \qquad \textrm{in } \Omega=[0,2]\\
      u'(0) &=& 1\\
      -u'(2) &=& \frac12
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -((1+x)u'(x))' &=& 1 \qquad \textrm{in } \Omega=[0,1]\\
      u(0) &=& 0\\
      u(1) &=& 0
    \end{eqnarray*}
  \item
    \begin{eqnarray*}
      -u''(x)+u'(x) &=& 0 \qquad \textrm{in } \Omega=[0,1]\\
      u(0) &=& 1\\
      -u'(1) &=& 0
    \end{eqnarray*}
\end{enumerate}

